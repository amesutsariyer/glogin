@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <div class="col-md-6 offset-md-3 mt-3">
        <div class="card">
            <div class="card-header">Google Authentication Using Asp.net Core</div>
            <div class="card-body primary">
                <form asp-action="Authenticate" method="get">
                    <div class="form-group">
                        <label for="email" class="sr-only">Redirect Url</label>
                        <input name="email" id="email" class="form-control" placeholder="Redirect Url" />
                    </div>
                    <div class="form-group text-center">
                        <input type="submit" value="Authenticate" name="save" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>